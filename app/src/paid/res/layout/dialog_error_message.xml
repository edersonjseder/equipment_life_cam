<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="5dp"
    android:background="@color/pitch"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_message_alert_dialog"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/StyleAlertDialogText"
        tools:text="@string/login_alert_dialog_error_login_message"/>

    <Button
        android:id="@+id/btn_alert_dialog_message"
        android:layout_marginTop="5dp"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:text="@string/login_alert_dialog_button_text"
        style="@style/CustomButtonLogin"/>

</LinearLayout>