<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paid.signupfacebook.SignUpFacebookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/pitch"
        android:gravity="center_horizontal|center_vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="4dp"
                android:layout_height="wrap_content">

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/btn_facebook_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- A small divider -->
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_facebook_sign_in_cancel"
                    android:layout_width="180dp"
                    android:layout_height="27dp"
                    android:elevation="6dp"
                    android:background="@drawable/rounded_btn_cancel_dialog"
                    style="@style/StyleDialogGoogleLoginText"
                    android:text="@string/signup_button_label_cancel"/>

            </LinearLayout>

        </LinearLayout>

</android.support.constraint.ConstraintLayout>